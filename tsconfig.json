{
  "compilerOptions": {
   "target": "es5",
    "lib": [
      "es6",
      "es2015",
      "dom",
      "es2015.promise",
      "es7"
    ],                                       
    "jsx": "react",
    "module": "ES2015",
    "declaration": true,
    "declarationDir": "dist", 
    "rootDir": "src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
